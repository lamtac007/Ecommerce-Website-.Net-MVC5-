@model IEnumerable<Encommerce_Model.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New ", "Create")    @Html.ActionLink("Create New ", "Create")<a><i class="fa fa-plus-circle"></i></a>

    @using (Html.BeginForm("Index", "Orders", FormMethod.Get))
    {
<p>
        ProductName: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
            </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model =>model.Product.ID_Product)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem=>item.Product.ID_Product)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProductName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Unit)
    </td>
    <td>
        <img src="~/Content/images/@item.Product.Image" width="50" height="50" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PaymentMethod)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Amount)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TotalPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem =>item.Note)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID_Order }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID_Order }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID_Order })
    </td>
</tr>
}

</table>
