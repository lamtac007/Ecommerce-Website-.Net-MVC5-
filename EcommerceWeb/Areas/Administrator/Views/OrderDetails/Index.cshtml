@model IEnumerable<Encommerce_Model.OrderDetails>

@{
    ViewBag.Title = "Index";
}

<h2>
    @Html.ActionLink("Create New ", "Create")<a><i class="fa fa-plus-circle"></i></a>

</h2>
<br />
<p>
    @using (Html.BeginForm("Index", "OrderDetails", FormMethod.Get))
    {
<p>
    CheckStatus: @Html.TextBox("searchPaym","All")
    OrderDetailName: @Html.TextBox("SearchString")
    <input type="submit" value="Search" />
</p>
}
    </p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.User.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDetailsName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.User.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.User.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status_)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ODate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Order.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDetailsName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.User.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.User.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status_)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ODate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_OrderDetails }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_OrderDetails }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_OrderDetails })
            </td>
        </tr>
    }

</table>
